/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.slide-image {
  width: 100%;
  height: 200px;
}
.btn-area{
  display: flex;
  width: 100%;
  height: 70px;
  padding: 10px 0;
}
.btn-area navigator {
  flex: 1;
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.btn-area navigator view {
  width: 40px;
  height: 40px;
  display: block;
  border-radius: 50%;
  background: #f00;
}
.btn-area navigator view  image {
  width: 40px;
  height: 40px;
  display: block;
  border-radius: 50%;
}
.btn-area navigator text {
  font-size: 12px;
  color: #aaa;
  margin-top: 5px;
}
.title {
  width: 100%;
  height: 30PX;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.title input {
  width: 100%;
  height: 30PX;
  line-height: 30px;
  text-align: center;
  font-size: 12px;
  color: #000;
}
.cont {
  width: 100%;
  margin-top: 10px;
  box-sizing: border-box;
  padding: 0 5px;
}
.cont .cont_list{
  box-sizing: border-box;
  padding: 0 5px;
  display: flex;
  float: left;
  flex-direction: column;
  width: 50%;
}
.cont_list .imgs {
  width: 100%;
}
.cont_list .imgs image {
  width: 100%;
  height: 100px;
}
.cont_list text {
  width: 100%;
  text-align: center;
}