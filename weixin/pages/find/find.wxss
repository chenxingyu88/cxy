.contain{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20px;
}
.list{
  float: left;
  width:100%;
  height: 140px;
  position: relative;
  padding: 20px 0;
  margin-top: 10px;
  box-shadow: 0 5px 2px #ccc;
}
.list .jieshao {
  position: absolute;
  width: 50%;
  height: 175px;
  top: 0px;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 10px;
  background: rgba(229,8,255,.7);
  color: #fff;
 
}
.list:nth-child(2) .jieshao {
  background: rgba(4,225,255,.7)
}
.list image {
  width: 100%;
  height: 140px;
}
.title{
  margin-bottom: 5px;
}
